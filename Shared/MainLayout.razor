@inherits LayoutComponentBase
<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />

<RadzenLayout style="grid-template-areas: 'rz-sidebar rz-header' 'rz-sidebar rz-body';">
    <RadzenHeader>
        <RadzenRow JustifyContent="JustifyContent.Start" AlignItems="AlignItems.Center" Gap="0">
            <RadzenColumn Size="5">
                <RadzenSidebarToggle Click="@SidebarToggleClick"></RadzenSidebarToggle>
            </RadzenColumn>
            <RadzenColumn Size="7">
                <RadzenStack AlignItems="AlignItems.Center" Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End">
                    <AuthorizeView>
                        <Authorized>
                            <RadzenProfileMenu>
                                <Template>
                                    <RadzenGravatar Email="TEST" />
                                </Template>
                                <ChildContent>
                                    <RadzenProfileMenuItem Text="Logout" Path="/Identity/Account/Logout" Icon="logout" />
                                </ChildContent>
                            </RadzenProfileMenu>
                        </Authorized>
                        <NotAuthorized>
                            <RadzenProfileMenu>
                                <Template>
                                    <RadzenGravatar Email="Guest" />
                                </Template>
                                <ChildContent>
                                    <RadzenProfileMenuItem Text="Login" Path="/Identity/Account/Login" Icon="login" />
                                </ChildContent>
                            </RadzenProfileMenu>
                        </NotAuthorized>
                    </AuthorizeView>
                </RadzenStack>
            </RadzenColumn>
        </RadzenRow>
    </RadzenHeader>
    <RadzenBody Expanded="@sidebarExpanded">
        <RadzenRow class="rz-mx-auto rz-px-4 rz-pt-2 rz-pt-md-4 rz-pt-lg-6 rz-pt-xl-12 rz-pb-2 rz-pb-lg-12" Style="max-width: 1440px;">
            <RadzenColumn Size="12">
                @Body
            </RadzenColumn>
        </RadzenRow>
    </RadzenBody>
    <RadzenSidebar Expanded="@sidebarExpanded" style="z-index: 2">
        <RadzenStack AlignItems="Radzen.AlignItems.Center" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding); border-bottom: var(--rz-panel-menu-item-border);">
            <RadzenImage Path="images/logo.png"  style="width: 48px; height: 48px;"></RadzenImage>
            <RadzenText Text="RM - Blazor" TextStyle="Radzen.Blazor.TextStyle.Subtitle1" class="rz-mb-0" style="color: var(--rz-sidebar-color);" />
        </RadzenStack>
        <RadzenPanelMenu>
            <AuthorizeView>
                <Authorized>
                    <RadzenPanelMenuItem Text="Dashboard" Path="/Dashboard" Icon="dashboard" />
                    <RadzenPanelMenuItem Text="Vacancies" Path="/Vacancies" Icon="work" />
                    <RadzenPanelMenuItem Text="Candidates" Path="/Candidates" Icon="people" />
                    <RadzenPanelMenuItem Text="Settings" Path="/Settings" Icon="settings" />
                </Authorized>
                <NotAuthorized>
                    <RadzenPanelMenuItem Text="Login" Path="/Identity/Account/Login" Icon="login" />
                </NotAuthorized>
            </AuthorizeView>
        </RadzenPanelMenu>
        <RadzenStack AlignItems="Radzen.AlignItems.Center" Gap="0" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding);">
            <RadzenText Text="RM - Blazor v1.0.0" TextStyle="Radzen.Blazor.TextStyle.Caption" style="color: var(--rz-text-disabled-color);" TagName="Radzen.Blazor.TagName.P" TextAlign="Radzen.TextAlign.Center" />
            <RadzenText Text="Copyright â’¸ 2023" TextStyle="Radzen.Blazor.TextStyle.Caption" class="rz-mb-0" style="color: var(--rz-text-disabled-color);" TagName="Radzen.Blazor.TagName.P" TextAlign="Radzen.TextAlign.Center" />
        </RadzenStack>
    </RadzenSidebar>
</RadzenLayout>
